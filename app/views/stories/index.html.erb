<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        Create Story
      </div>
      <div class="card-body">
        <%= form_for @story, :html => {:multipart => true, :class => "p-0 border-0"} do |f| %>
          <div class="form-group row mt-2">
            <div class="col-auto pr-0">
              <%= image_tag avatar_url(current_user), class: "post-author-icon" %>
            </div>
          </div>
            <%= f.file_field :images, multiple: true, direct_upload: true %>
          <%= f.submit "Publish Story", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div id="stories">
      <%= render 'stories_list' %>
    </div>
  </div>
</div>

